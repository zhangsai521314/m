<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="http://qzonestyle.gtimg.cn/qzone/openapi/qc_loader.js" data-appid="101346412" data-redirecturi="http://www.aizheaina.com/" charset="utf-8"></script>
    <script type="text/javascript">
        if (QC.Login.check()) {
            QC.Login.getMe(function (openId, accessToken) {
                QC.Login.signOut();//注销当前用户

            })
        }
    </script>
    <title>Index</title>
    <style type="text/css">
        .shi
        {
            background-color: #ff0000;
